<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>Neil MacMullen</Authors>
    <Version>1.0.0</Version>
    <Title>JPoke</Title>
    <Description>Provides path-based manipulation of JSON object trees</Description>
    <Copyright>(C) Neil MacMullen</Copyright>
    <PackageProjectUrl>https://github.com/NeilMacMullen/JPoke</PackageProjectUrl>
    <RepositoryUrl>https://github.com/NeilMacMullen/JPoke</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>Json C# manipulation path</PackageTags>
    <PackageReleaseNotes>Initial release</PackageReleaseNotes>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <IncludeSymbols>True</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NLog" />
  </ItemGroup>

</Project>
